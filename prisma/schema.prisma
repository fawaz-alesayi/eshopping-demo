// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  id      String    @id @default(cuid())
  email   String    @unique
  firstName String
  lastName String
  address Address[]


  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  password   String
  CreditCard CreditCard[]
  Cart       Cart?
}

model Address {
  id          String @id @default(cuid())
  country     String
  city        String
  addressLine String
  user        User   @relation(fields: [userId], references: [id])
  userId      String
}

model CreditCard {
  id         String   @id @default(cuid())
  number String   @db.VarChar(19)
  holderName String
  expiry     DateTime
  user       User     @relation(fields: [userId], references: [id])
  userId     String
}

model Item {
  id          String      @id @default(cuid())
  name        String
  price       Decimal
  description String?
  cartId      String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  CartItems   CartItems[]
}

model Cart {
  id        String      @id @default(cuid())
  user      User        @relation(fields: [userId], references: [id])
  userId    String
  CartItems CartItems[]
}

model CartItems {
  cartId String
  cart   Cart   @relation(fields: [cartId], references: [id])
  itemId String
  item   Item   @relation(fields: [itemId], references: [id])
  amount Int

  @@id([cartId, itemId])
}
